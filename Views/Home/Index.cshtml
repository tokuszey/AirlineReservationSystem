@model List<OceanicAirlines.Models.Flight>

@{
    ViewBag.Title = "Flight Search";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/www.css" />
    <title> Oceanic Airlines</title>
</head>
<header class="section__container header__container">
    <h1 class="section__header">Your Journey<br />Our Wings </h1>
    <img src="~/assets/header.jpg" alt="header" />
</header>

<h2>Flight Search</h2>

@if (Model == null || !Model.Any())
{
    <div class="search-form">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="fromLocation">From:</label>
                <select name="fromLocation" id="fromLocation" class="form-control">
                    <option value="" disabled selected>Select city</option>
                    @foreach (var city in ViewBag.Cities as List<string>)
                    {
                        <option value="@city">@city</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="toLocation">To:</label>
                <select name="toLocation" id="toLocation" class="form-control">
                    <option value="" disabled selected>Select city</option>
                    @foreach (var city in ViewBag.Cities as List<string>)
                    {
                        <option value="@city">@city</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="departureDate">Date:</label>
                <input type="date" name="departureDate" id="departureDate" class="form-control" />
            </div>
            <div class="form-group">
                <label for="passenger"><i class="fa fa-male"></i> Passenger:</label>
                <input type="number" id="passenger" name="passenger" class="form-control" value="1" min="1" max="6" />
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        }
    </div>
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}

@if (Model != null && !Model.Any())
{
    <div class="alert alert-warning mt-3">No suitable flights found.</div>
}
