    }
</script>
<!----- About-------->
<section class="about">
    <div class="about-img">
        <img src="~/assets/plan-2.jpg">
    </div>
    <div class="about-text">
        <small>ABOUT OUR COMPANY</small>
        <h2>We are an Airline Company</h2>
        <p>
            Welcome to Oceanic Airlines , where we are dedicated to providing the best travel experience for our passengers.
            Our mission is to offer safe, comfortable, and affordable flights across the globe. With a fleet of modern aircraft and
            exceptional customer service, we aim to make your journey as seamless and enjoyable as possible.
        </p>
        <label><input type="checkbox" checked>Leading airline with global coverage</label>
        <label><input type="checkbox" checked>Modern fleet equipped with the latest technology</label>
        <label><input type="checkbox" checked>Commitment to safety and security</label>
        <label><input type="checkbox" checked>Exceptional customer service from booking to landing</label>
        <a href="@Url.Action("About", "Home")">ABOUT US</a>
    </div>
</section>

<!-- Contact -->
<div class="-container">
    <h2>Contact</h2>
    <p>Let us book your next trip!</p>
    <i class="fa fa-map-marker" style="width:30px"></i> Istanbul,Turkey<br>
    <i class="fa fa-phone" style="width:30px"></i> Phone: +90 555 555 55 55<br>
    <i class="fa fa-envelope" style="width:30px"> </i>
    <a href="mailto:oceanicairlines@mail.com" style="color: black; text-decoration: none;">Email: oceanicairlines@mail.com</a><br>

    <form id="contactForm" onsubmit="return showConfirmation(event)">
        <p><input class="-input -padding-16 -border" type="text" placeholder="Name" required name="Name"></p>
        <p><input class="-input -padding-16 -border" type="email" placeholder="Email" required name="Email"></p>
        <p><textarea class="-input -padding-16 -border" placeholder="Message" required name="Message"></textarea></p>
        <p><button class="-button -black -padding-large" type="submit">SEND MESSAGE</button></p>
    </form>

    <script>
        function showConfirmation(event) {
            event.preventDefault();
            const name = document.getElementsByName("Name")[0].value;
            const email = document.getElementsByName("Email")[0].value;
            const message = document.getElementsByName("Message")[0].value;

            alert(`Thank you for your message, ${name}! We have received your email (${email}) and your message: "${message}".`);

            document.getElementById("contactForm").reset();
        }
    </script>
</div>

