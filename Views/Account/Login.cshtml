@{
    ViewBag.Title = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
<link rel="stylesheet" href="~/Content/Site.css" />
<link rel="stylesheet" href="~/Content/www.css" />
<style>
    /* Background gradient for the login section */
    .login-container {
        background: linear-gradient(135deg, #e3e3e3, #f1f1f1);
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 50px auto;
    }
</style>

<div class="login-container">
    <h2>Login</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <form method="post" action="@Url.Action("Login", "Account")">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="password" required />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <p>
        Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up</a>
    </p>
</div>
